<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/time_dialog_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center|start"
              android:background="@drawable/transparent_dialog"
              android:elevation="5dp"
              android:gravity="center|start"
              android:orientation="vertical">

    <TextView
        android:id="@+id/quiz_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/quiz_what_time_is_it"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/quiz_hour_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/quiz_hour_hint"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:maxLines="1"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_time_sep"/>

        <EditText
            android:id="@+id/quiz_min_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/quiz_minute_hint"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:maxLines="1"
            android:textSize="24sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/quiz_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/transparent_dialog"
        android:elevation="5dp"
        android:text="@string/quiz_next"
        android:textSize="18sp"/>

</LinearLayout>
