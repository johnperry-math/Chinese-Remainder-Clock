<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Chinese_Remainder$PlaceholderFragment">

    <TextView
        android:id="@+id/time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="3"
        android:text="99:99:99"
        android:textAlignment="center"
        android:textSize="36sp" />

    <view
        class="name.cantanima.chineseremainderclock.CRC_View"
        android:id="@+id/crc_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@id/crc_view"
        android:layout_alignEnd="@id/crc_view"
        android:orientation="vertical"
    >
        <Spinner
            android:id="@+id/selectUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/unitStrings"
            android:spinnerMode="dropdown"
            android:focusable="true"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/linearLayout" >

            <Button
                android:id="@+id/decrementButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/dec_button" />

            <Button
                android:id="@+id/incrementButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/inc_button" />

        </LinearLayout>

        <Switch
            android:id="@+id/activeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:showText="true"
            android:text="@string/auto_button_text"
            android:textOff="@string/auto_button_text_off"
            android:textOn="@string/auto_button_text_on"/>

        <EditText
            android:id="@+id/timeEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:ems="3"
            android:imeOptions="actionDone"
            android:selectAllOnFocus="true"
            android:inputType="number" />

    </LinearLayout>
</RelativeLayout>
